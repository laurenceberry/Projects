%section
  .section-inner
    %h1=@project.title
    =@project.intro
- @project.blocks.each do |block|
  %section
    .section-inner
      %h2=block.title
      .content
        - if block.text_block.blank?
          %p
        - else
          =markdown(block.text_block)
      - if block.image_primary.exists?
        .image
          = image_tag block.image_primary.url(:medium), :onclick => "showImage('#{block.image_primary.url(:large)}')"
          - if block.image_tertiary.exists?
            .image-group
              = image_tag block.image_secondary.url(:medium), :onclick => "showImage('#{block.image_secondary.url(:large)}')"
              = image_tag block.image_tertiary.url(:medium), :onclick => "showImage('#{block.image_tertiary.url(:large)}')"
          - elsif block.image_secondary.exists?
            = image_tag block.image_secondary.url(:medium), :onclick => "showImage('#{block.image_secondary.url(:large)}')"